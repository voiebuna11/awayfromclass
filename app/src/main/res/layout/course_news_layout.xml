<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_layout_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/semi_round_white_layout"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="?attr/selectableItemBackground">
        <ImageView
            android:id="@+id/news_user_avatar"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/user_avatar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/news_user_avatar">
            <TextView
                android:id="@+id/news_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lastname Firstname added thre or for contents for the risk because we are immortals"
                android:textSize="16sp"
                android:textStyle=""
                android:textColor="@color/colorBlack"/>
            <TextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/mm/yyyy - hh:ii"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="1"
                android:maxLines="1"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>